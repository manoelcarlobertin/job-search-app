<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body p-4">
          <h2 class="text-center mb-4">Login Empresa</h2>

          <%= form_with(model: resource, url: session_path(resource_name), local: true, html: { class: 'form' }) do |f| %>
            <div class="mb-4">
              <%= f.label :email, "E-mail", class: "form-label fw-bold" %>
              <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: "Digite seu e-mail" %>
            </div>

            <div class="mb-4">
              <%= f.label :password, "Senha", class: "form-label fw-bold" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Digite sua senha" %>
            </div>

            <div class="form-check mb-4">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Lembrar-me", class: "form-check-label" %>
            </div>

            <%= f.submit "Entrar", class: "btn btn-primary btn-lg w-100 mb-4" %>
          <% end %>

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
