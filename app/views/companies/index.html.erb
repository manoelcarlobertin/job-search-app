<!-- Notice message with Bootstrap alert -->
<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% content_for :title, "Companies" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Companies</h1>
    <%= link_to new_company_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-circle"></i> New Company
    <% end %>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" id="companies">
    <% @companies.each do |company| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <%= render company %>
            <div class="mt-3">
              <%= link_to edit_company_path(company), class: "btn btn-outline-warning btn-sm ms-1" do %>
                <i class="bi bi-pencil"></i> Edit
              <% end %>
              <%= link_to company_path(company), class: "btn btn-outline-danger btn-sm ms-1", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this company?" } do %>
                <i class="bi bi-trash"></i> Delete
              <% end %>            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>