<%= simple_form_for @company, html: { class: 'needs-validation', novalidate: true } do |form| %>
  <% if @company.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h5 class="alert-heading"><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h5>
      <ul class="mb-0">
        <% @company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <%= form.input :name,
          label: 'Nome',
          wrapper_html: { class: 'mb-3' },
          input_html: { class: 'form-control' },
          placeholder: 'Digite o nome da empresa' %>

      <%= form.input :description,
          label: 'Descrição',
          as: :text,
          wrapper_html: { class: 'mb-3' },
          input_html: { class: 'form-control', rows: 4 },
          placeholder: 'Digite a descrição da empresa' %>

      <div class="form-actions d-grid gap-2 d-md-flex justify-content-md-end mt-4">
        <%= link_to 'Voltar', companies_path, class: 'btn btn-secondary me-md-2' %>
        <%= form.button :submit, 'Salvar', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
